/ SupportLevels
-content_for(:empty_msg, "Currently no #{t('support_level').pluralize.downcase}")

=render 'head'

- if @support_levels.empty?
  %p= yield(:empty_msg)  
- else
  %table.table.table-hover.table-condensed
    %tbody
      %thead
        %th
          = sortable "name"
          %span{:class => 'caret'}
        %th= sortable "hours"
        %th= sortable "days"
        %th= sortable "exclusions"
        %th= sortable "description"
        %th= link_to t('system').pluralize.humanize, systems_path
      - @support_levels.each do |r|
        %tr
          %td= link_to r.name, r
          %td= r.hours
          %td= r.days
          %td= r.exclusions
          %td= r.description
          %td= link_to r.systems.count, support_level_systems_path(r.slug)
  = paginate @support_levels