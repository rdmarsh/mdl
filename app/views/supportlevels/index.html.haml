- content_for(:title, t('supportlevels').humanize)
- content_for(:new_button_path, new_supportlevel_path)

= render 'layouts/indexheading'

%table.table.table-hover.table-condensed
  %tbody
    %thead
      %th= sort_link @search, :supportlevel, t('supportlevel').humanize
      %th= sort_link @search, :supporthours, t('supporthours').humanize
      %th= sort_link @search, :supportdays, t('supportdays').humanize
      %th= sort_link @search, :supportexclusions, t('supportexclusions').humanize
      %th= sort_link @search, :supportdescription, t('supportdescription').humanize
      %th= t('edit').humanize
    - @supportlevels.each do |sl|
      %tr
        %td= link_to sl.supportlevel, sl
        %td= sl.supporthours
        %td= sl.supportdays
        %td= sl.supportexclusions
        %td= sl.supportdescription
        %td
          %a{ :title => t('editrecord').humanize, :href => edit_supportlevel_path(sl) }
            %i{ :class => 'icon-edit' }
        