    %thead
      %th= t('level').humanize
      %th= t('hours').humanize
      %th= t('days').humanize
      %th= t('exclusions').humanize
      %th= t('description').humanize
      %th
    - @supportlevels.each do |sl|
      %tr
        %td= link_to sl.level, sl
        %td= sl.hours
        %td= sl.days
        %td= sl.exclusions
        %td= sl.description
        %td
