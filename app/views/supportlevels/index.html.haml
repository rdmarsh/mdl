- content_for(:title, t('supportlevels').humanize)
- content_for(:new_button_path, new_supportlevel_path)

= render 'layouts/indexheading'

%table.table.table-hover.table-condensed
  %tbody
    %thead
      %th= sortable "supportlevel"
      %th= sortable "supporthours"
      %th= sortable "supportdays"
      %th= sortable "supportexclusions"
      %th= sortable "supportdescription"
      %th= sortable "edit"
    - @supportlevels.each do |sl|
      %tr
        %td= link_to sl.supportlevel, sl
        %td= sl.supporthours
        %td= sl.supportdays
        %td= sl.supportexclusions
        %td= sl.supportdescription
        %td
          %a{ :title => t('editrecord').humanize, :href => edit_supportlevel_path(sl) }
            %i{ :class => 'icon-edit' }
        