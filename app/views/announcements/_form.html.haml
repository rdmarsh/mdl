= simple_form_for @announcement, :html => { :class => 'form-horizontal' } do |f|
  = f.error_notification

  = f.input :message
  = f.input :starts_at
  = f.input :starts_at,
            :input_html => { data: {behaviour: "datepicker"}}, 
            :as => :string
  
  = f.input :ends_at

  = f.error :base
  = f.button :submit, :class => 'btn btn-primary'
  
  .btn-group.task_controller
    %a{:class => 'btn btn-danger dropdown-toggle', 'data-toggle' => 'dropdown', :href => '#'}
      #{t('delete').humanize}
      %span{:class => 'caret'}
    %ul.dropdown-menu
      %li= link_to "Delete '#{f.object.id}'?", @announcement, :confirm => 'Are you sure?', :method => :delete
  #{t('or').downcase}
  = link_to "#{t('cancel')}".humanize, :back