= simple_form_for @announcement do |f|
  = f.error_notification

  = f.input :message
  = f.input :starts_at, as: :string, input_html: { id: "datetimepicker1", class: "input-append date", value: Time.now.strftime('%Y-%m-%d %H:%M') }
  = f.input :ends_at, as: :string, input_html: { class: "datepicker", value: Time.now.strftime('%Y-%m-%d %H:%M') }

  = f.error :base
  = f.button :submit, :class => 'btn btn-primary'
  
  .btn-group.task_controller
    %a{:class => 'btn btn-danger dropdown-toggle', 'data-toggle' => 'dropdown', :href => '#'}
      #{t('delete').humanize}
      %span{:class => 'caret'}
    %ul.dropdown-menu
      %li= link_to "Delete '#{f.object.id}'?", @announcement, :confirm => 'Are you sure?', :method => :delete
  #{t('or').downcase}
  = link_to "#{t('cancel')}".humanize, :back