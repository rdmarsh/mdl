- content_for(:title, t('organisations').humanize)

%p.text-right
  = link_to new_organisation_path, class: "btn btn-success btn-mini" do
    %i.icon-white.icon-plus
    = t('neworganisation').humanize

%h1= yield(:title)

%table.table.table-hover.table-condensed
  %tbody
    %thead
      %th= t('reference').humanize
      %th= t('name').humanize
      %th= t('servicelevel').humanize
      %th= t('supportlevel').humanize
      %th= t('relationship').humanize
      %th= t('active').humanize
    - @organisations.each do |o|
      %tr{:class => tr_attributes(o.active)}
        %td= link_to o.reference, o
        %td= o.name
        %td= o.servicelevel
        %td= o.supportlevel
        %td= o.relationship
        %td= o.active
