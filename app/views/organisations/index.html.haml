/ Organisations
-content_for(:empty_msg, "Currently no #{t('organisation').pluralize.downcase}")

=render 'head'

- if @organisations.empty?
  %p= yield(:empty_msg)  
- else
  %table.table.table-hover.table-condensed
    %tbody
      %thead
        %th
          = sortable "id"
          %span{:class => 'caret'}
        %th
          = sortable "name"
          %span{:class => 'caret'}
        %th= sortable "full_name"
        %th= link_to t('relationship').singularize.humanize, relationships_path
        %th= sortable "phone"
        %th= sortable "active"
        %th= link_to t('system').pluralize.humanize, systems_path
      - @organisations.each do |r|
        %tr{:class => tr_attributes(r.active)}
          %td= r.id
          %td= link_to r.name, r
          %td= r.full_name
          %td= link_to r.relationship.name, relationship_path(r.relationship_id)
          %td= r.phone
          %td= r.active
          %td              
            %ul.unstyled
              - r.systems.each do |system|
                %li= link_to system.name, system_path(system.id)
  = paginate @organisations