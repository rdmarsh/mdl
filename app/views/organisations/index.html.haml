=render 'head'

%table.table.table-hover.table-condensed
  %tbody
    %thead
      %th= sortable "reference"
      %th= sortable "name"
      %th= sortable "service_level"
      %th= sortable "support_level"
      %th= sortable "relationship"
      %th= sortable "active"
    - @organisations.each do |o|
      %tr{:class => tr_attributes(o.active)}
        %td= link_to o.reference, o
        %td= o.name
        %td= o.service_level
        %td= o.support_level
        %td= o.relationship
        %td= o.active
