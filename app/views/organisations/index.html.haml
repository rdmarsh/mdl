- content_for(:title, t('organisations').humanize)

%h1= yield(:title)

%p.text-right
%span.btn-success.btn-large
  %link_to "Create a new " + t('organisations').humanize, new_organisation_path

%table.table.table-hover.table-condensed
  %tbody
    %thead
      %th= t('reference').humanize
      %th= t('name').humanize
      %th= t('servicelevel').humanize
      %th= t('supportlevel').humanize
      %th= t('relationship').humanize
      %th= t('active').humanize
    - @organisations.each do |o|
      %tr{:class => tr_attributes(o.active)}
        %td= link_to o.reference, o
        %td= o.name
        %td= o.servicelevel
        %td= o.supportlevel
        %td= o.relationship
        %td= o.active
