= simple_form_for @organisation, :html => { :class => 'form-horizontal' } do |f|
  = f.error_notification
  = f.input :name, hint: "Organisation name"
  = f.input :full_name, hint: "Organisation full name"
  = f.input :service_reference, hint: "Service level"
  = f.association :support_level, include_blank: false, hint: "Support level", prompt: "Choose a support level", collection: SupportLevel.order('name ASC')
  = f.input :relationship
  = f.input :active, hint: "Current organisation?", inline_label: 'Yes, remember me'
  = f.input :phone
  = f.input :fax
  = f.input :email, placeholder: 'user@domain.com'
  = f.input :address_1
  = f.input :address_2
  = f.input :city, placeholder: 'city'
  = f.input :postcode, placeholder: '9999'
  = f.input :state  
  = f.input :country, priority: [ "Australia", "India", "New Zealand", "United Kingdom", "United States"], include_blank: true
  = f.error :base
  = f.button :submit, :class => 'btn btn-primary'
  .btn-group.task_controller
    %a{:class => 'btn btn-danger dropdown-toggle', 'data-toggle' => 'dropdown', :href => '#'}
      Delete
      %span{:class => 'caret'}
    %ul.dropdown-menu
      %li= link_to "Delete '#{@organisation.name}'?", @organisation, :confirm => 'Are you sure?', :method => :delete
  or
  = link_to "Cancel", :back