- content_for(:show_button_path, organisation_path(@organisation))
- content_for(:edit_button_path, edit_organisation_path)

= render 'head'

= show_for @organisation do |f|
  = f.attribute :name
  = f.attribute :full_name
  = f.attribute :service_reference
  = f.attribute :name, :in => :support_level
  = f.attribute :relationship
  = f.attribute :active?
  = f.attribute :phone
  = f.attribute :fax
  = f.attribute :email
  = f.attribute :address_1
  = f.attribute :address_2
  = f.attribute :city
  = f.attribute :postcode
  = f.attribute :state
  = f.attribute :country
  = f.attribute :created_at, :format => :iso8601
  = f.attribute :updated_at, :format => :iso8601
