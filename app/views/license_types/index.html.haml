/ LicenseTypes
-content_for(:empty_msg, "Currently no #{t('license_type').pluralize.downcase}")

=render 'head'

- if @license_types.empty?
  %p= yield(:empty_msg)  
- else
  %table.table.table-hover.table-condensed
    %tbody
      %thead
        %th
          = sortable "name"
          %span{:class => 'caret'}
        %th= link_to t('licensor').singularize.humanize, organisations_path
        %th
          = sortable "description"
          %span{:class => 'caret'}
        %th= link_to t('license').pluralize.humanize, licenses_path
      - @license_types.each do |r|
        %tr
          %td= link_to r.name, r
          %td= link_to r.organisation.name, organisation_path(r.organisation.slug)
          %td= r.description
          %td= link_to r.licenses.count, license_type_licenses_path(r.slug)
  = paginate @license_types