= simple_form_for @license_type, :html => { :class => 'form-horizontal' } do |f|
  = f.error_notification
  = f.input :name, hint: "license_type"
  = f.association :organisation, include_blank: false, collection: Organisation.order('name ASC')
  = f.input :description, hint: "Description of license type"
  = f.error :base
  = f.button :submit, :class => 'btn btn-primary'
  .btn-group.task_controller
    %a{:class => 'btn btn-danger dropdown-toggle', 'data-toggle' => 'dropdown', :href => '#'}
      Delete
      %span{:class => 'caret'}
    %ul.dropdown-menu
      %li= link_to "Delete '#{f.object.name}'?", @license_type, :confirm => 'Are you sure?', :method => :delete
  or
  = link_to "Cancel", :back
