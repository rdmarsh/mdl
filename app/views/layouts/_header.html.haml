%header.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.brand 
        %= root_path
        %= Rails.application.class.parent_name.downcase
      .btn-group.pull-right
        %a.btn.btn-primary.btn-small"><i class="icon-user icon-white"></i> Login</a>
        %a.btn.btn-primary.btn-small.dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
        %ul.dropdown-menu
          %li
            %a href="#"><i class="icon-plus"></i> Create an account</a></li>
      .nav-collapse.collapse
        %ul.nav
          %li class="<%= 'active' if current_page?(root_path) %>"><%= link_to t('home').humanize, root_path %></li>
        </ul>
        %ul.nav.pull-right
          %li.divider-vertical
          %li.dropdown
            %a.dropdown-toggle" data-toggle="dropdown" href="#">
                Help
                <b class="caret"></b>
              </a>
            %ul.dropdown-menu
              %li ><%= link_to t('help').humanize, help_path %></li>
              %li ><%= link_to t('faq').upcase, faq_path %></li>
            </ul>
          </li>
        </ul>
        <form class="navbar-search pull-right">
          <input type="text" class="search-query" placeholder="Search">
        </form>
      </div><!--/.nav-collapse -->
    </div>
  </div>
</header>