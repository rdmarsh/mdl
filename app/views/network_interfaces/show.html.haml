/ NetworkInterface
- content_for(:edit_button_path, edit_network_interface_path)

= render 'head'

= show_for @network_interface do |f|
  .well
    %b= f.attribute :name
    = f.attribute :ipaddress
    = f.attribute :vlan
    = f.attribute :active?
    = f.attribute :dhcp?
    = f.attribute :ipaddress
    = f.attribute :netmask
    = f.attribute :prefix
    = f.attribute :broadcast
    = f.attribute :gateway
    = f.association :network_use
    = f.association :system
    = simple_format f.attribute :description
  .well.muted
    = f.attribute :created_at, :format => :iso8601
    = f.attribute :updated_at, :format => :iso8601