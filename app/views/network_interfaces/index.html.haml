/ NetworkInterface
-content_for(:empty_msg, "Currently no #{t('network_interface').pluralize.downcase}")

=render 'head'

- if @network_interfaces.empty?
  %p= yield(:empty_msg)  
- else
  %table.table.table-hover.table-condensed
    %tbody
      %thead
        %th
          = sortable "id"
          %span{:class => 'caret'}
        %th
          = sortable "name"
          %span{:class => 'caret'}
        %th
          = sortable "ipaddress"
          %span{:class => 'caret'}
        %th= sortable "description"
        %th= link_to t('network_use').singularize.humanize, network_uses_path
        %th= link_to t('device').singularize.humanize, devices_path
      - @network_interfaces.each do |r|
        %tr
          %td= r.id
          %td= link_to r.name, r
          %td= r.ipaddress
          %td= r.description
          %td= link_to r.network_use.name, network_use_path(r.network_use_id)
          %td= link_to r.device.name, device_path(r.device_id)
