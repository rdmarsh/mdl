= simple_form_for @manufacturer, :html => { :class => 'form-horizontal' } do |f|
  = f.error_notification
  
  = f.input :name, hint: "Manufacturer"
  = f.input :website, hint: "Website"
  = f.input       :description,     hint: "#{t('hint_description')} manufacturer"
  
  = f.error :base
  = f.button :submit, :class => 'btn btn-primary'
  .btn-group.task_controller
    %a{:class => 'btn btn-danger dropdown-toggle', 'data-toggle' => 'dropdown', :href => '#'}
      #{t('delete')}.humanize
      %span{:class => 'caret'}
    %ul.dropdown-menu
      %li= link_to "Delete '#{f.object.name}'?", @manufacturer, :confirm => 'Are you sure?', :method => :delete
  or
  = link_to "#{t('cancel')}".humanize, :back