/ Manufacturers
-content_for(:empty_msg, "Currently no #{t('manufacturer').pluralize.downcase}")

=render 'head'

- if @manufacturers.empty?
  %p= yield(:empty_msg)  
- else
  %table.table.table-hover.table-condensed
    %tbody
      %thead
        %th
          = sortable "id"
          %span{:class => 'caret'}
        %th
          = sortable "name"
          %span{:class => 'caret'}
        %th= sortable "website"
        %th= link_to t('device_model').pluralize.humanize, device_models_path
      - @manufacturers.each do |r|
        %tr
          %td= r.id
          %td= link_to r.name, r
          %td= link_to r.website, r.website
          %td              
            %ul.unstyled
              - r.device_models.each do |device_model|
                %li= link_to device_model.name, device_model_path(device_model.slug)
