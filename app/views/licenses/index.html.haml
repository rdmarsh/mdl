/ Licenses
-content_for(:empty_msg, "Currently no #{t('license').pluralize.downcase}")

=render 'head'

- if @licenses.empty?
  %p= yield(:empty_msg)  
- else
  %table.table.table-hover.table-condensed
    %tbody
      %thead
        %th
          = sortable "id"
          %span{:class => 'caret'}
        %th
          = sortable "quantity"
          %span{:class => 'caret'}
      - @licenses.each do |r|
        %tr
          %td= r.id
          %td= link_to r.organisation.name, organisation_path(r.organisation_id)
          %td= link_to r.license_type.name, license_type_path(r.license_type_id)
          %td= link_to r.quantity, r
