= simple_form_for @device_model, :html => { :class => 'form-horizontal' } do |f|
  = f.error_notification
  
  = f.input       :name,            hint: "What do you want to call it?"
  = f.association :manufacturer,    hint: "Who manufactured it?",               prompt: "#{t('choose_a').humanize} #{t('manufacturer').singularize.humanize}",  collection: Manufacturer.order('name ASC')
  = f.association :device_type,     hint: "What type of device is it?",         prompt: "#{t('choose_a').humanize} #{t('device_type').singularize.humanize}",   collection: DeviceType.order('name ASC')
  = f.input       :end_of_sale,     hint: "When will it stop being sold?",      include_blank: true
  = f.input       :end_of_support,  hint: "When will it stop being supported?", include_blank: true
  = f.input       :description,     hint: "Description of the device model"
  
  = f.error :base
  = f.button :submit, :class => 'btn btn-primary'
  
  .btn-group.task_controller
    %a{:class => 'btn btn-danger dropdown-toggle', 'data-toggle' => 'dropdown', :href => '#'}
      #{t('delete')}.humanize
      %span{:class => 'caret'}
    %ul.dropdown-menu
      %li= link_to "#{t('delete')} '#{f.object.name}'?", @device_model, :confirm => 'Are you sure?', :method => :delete
  #{t('or').downcase}
  = link_to "#{t('cancel')}".humanize, :back