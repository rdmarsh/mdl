= simple_form_for @device_model, :html => { :class => 'form-horizontal' } do |f|
  = f.error_notification
  = f.input :name, hint: "Device model"
  = f.association :device_type
  = f.input :description, hint: "Description of the device model"
  = f.error :base
  = f.button :submit, :class => 'btn btn-primary'
  .btn-group.task_controller
    %a{:class => 'btn btn-danger dropdown-toggle', 'data-toggle' => 'dropdown', :href => '#'}
      Delete
      %span{:class => 'caret'}
    %ul.dropdown-menu
      %li= link_to "Delete '#{@device_model.name}'?", @device_model, :confirm => 'Are you sure?', :method => :delete
  or
  = link_to "Cancel", :back