= simple_form_for @service_level do |f|
  = f.error_notification
  
  = f.input       :name
  = f.input       :description
  
  = f.error :base
  = f.button :submit, :class => 'btn btn-primary'
  
  / = if @service_level.name =~ /regex/
  .btn-group.task_controller
    %a{:class => 'btn btn-danger dropdown-toggle', 'data-toggle' => 'dropdown', :href => '#'}
      Delete
      %span{:class => 'caret'}
    %ul.dropdown-menu
      %li= link_to "Delete '#{f.object.name}'?", @service_level, data: { confirm: 'Are you sure?' }, :method => :delete
  #{t('or').downcase}
  = link_to "#{t('cancel')}".humanize, :back