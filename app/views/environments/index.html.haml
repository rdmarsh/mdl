/ Environments
-content_for(:empty_msg, "Currently no #{t('environment').pluralize.downcase}")

=render 'head'

- if @environments.empty?
  %p= yield(:empty_msg)  
- else
  %table.table.table-hover.table-condensed
    %tbody
      %thead
        %th
          = sortable "id"
          %span{:class => 'caret'}
        %th
          = sortable "name"
          %span{:class => 'caret'}
        %th= sortable "description"
        %th= link_to t('system').pluralize.humanize, systems_path
      - @environments.each do |r|
        %tr
          %td= r.id
          %td= link_to r.name, r
          %td= r.description
          %td              
            %ul.unstyled
              - r.systems.each do |system|
                %li= link_to system.name, system_path(system.id)