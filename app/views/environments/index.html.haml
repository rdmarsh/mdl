- content_for(:title, t('environments').humanize)

%p.text-right
  = link_to new_environment_path, class: "btn btn-success btn-mini" do
    %i.icon-white.icon-plus
    = t('newenvironment').humanize

%h1= yield(:title)

%table.table.table-hover.table-condensed
  %tbody
    %thead
      %th= t('environments').humanize
      %th= t('description').humanize
      %th= t('edit').humanize
    - @environments.each do |e|
      %tr
        %td= link_to e.environment, e
        %td= e.description
        %td
          %a{ :title => t('editrecord').humanize, :href => edit_environment_path(e) }
            %i{ :class => 'icon-edit' }
        